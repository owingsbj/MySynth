<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/mainLayout"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@raw/theme_background" android:orientation="vertical"
	android:paddingLeft="10dp" android:paddingTop="5dp"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/titleText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:shadowColor="#444444"
		android:shadowDx="1" android:shadowDy="1" android:shadowRadius="2"
		android:text="Settings:" android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="25dp" android:textStyle="bold" />
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:shadowColor="#444444"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
			android:text="Sound: " android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="16dp" />
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="match_parent" android:layout_marginLeft="10dp">
			<CheckBox android:id="@+id/playMusicCheckBox"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shadowColor="#444444" android:shadowDx="1" android:shadowDy="1"
				android:shadowRadius="1" android:text="Music  " android:textSize="16dp"
				android:visibility="visible" />
			<CheckBox android:id="@+id/playSoundEffectsCheckBox"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shadowColor="#444444" android:shadowDx="1" android:shadowDy="1"
				android:shadowRadius="1" android:text="Sound effects  "
				android:textSize="16dp" android:visibility="visible" />
			<CheckBox android:id="@+id/vibrationCheckBox"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shadowColor="#444444" android:shadowDx="1" android:shadowDy="1"
				android:shadowRadius="1" android:text="Vibration" android:textSize="16dp"
				android:visibility="visible" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:shadowColor="#444444"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
			android:text="Control: " android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="16dp" />
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="10dp">
			<TextView android:id="@+id/controlTypeLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#444444"
				android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
				android:text="Type: " android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="16dp" />
			<Spinner android:id="@+id/controlType" android:layout_width="100dp"
				android:layout_height="40dp" android:layout_weight="1" />
			<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:layout_marginLeft="5dp" android:shadowColor="#444444"
				android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
				android:text="Sensitivity: " android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="16dp" />
			<com.gallantrealm.android.Slider android:id="@+id/controlSensitivity"
				android:layout_width="100dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:layout_marginRight="5dp"
				android:layout_weight="1" android:max="100" android:progress="50" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/countText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:shadowColor="#444444"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"
			android:text="View:  " android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="16dp" />
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="match_parent" android:layout_marginLeft="10dp">
			<CheckBox android:id="@+id/viewIn3dCheckbox"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shadowColor="#444444" android:shadowDx="1" android:shadowDy="1"
				android:shadowRadius="1" android:text="Stereoscopic 3D  "
				android:textSize="16dp" />
			<CheckBox android:id="@+id/simpleRenderingCheckBox"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shadowColor="#444444" android:shadowDx="1" android:shadowDy="1"
				android:shadowRadius="1" android:text="Simple rendering  "
				android:textSize="16dp" android:visibility="visible" />
			<CheckBox android:id="@+id/powerSaverCheckBox"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:shadowColor="#444444" android:shadowDx="1" android:shadowDy="1"
				android:shadowRadius="1" android:text="Power saver"
				android:textSize="16dp" android:visibility="visible" />
		</LinearLayout>
	</LinearLayout>
	<Button android:id="@+id/okButton" android:layout_width="120dp"
		android:layout_height="60dp" android:layout_gravity="center"
		android:paddingLeft="20dp" android:paddingRight="20dp" android:text="OK"
		android:textSize="25dp" android:textStyle="bold" android:background="@drawable/theme_button" />
</LinearLayout>