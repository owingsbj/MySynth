<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical" android:minWidth="300dp" android:minHeight="400dp"
	android:background="@drawable/dialog_background">
	<TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Select a sound:" android:layout_gravity="top|left" android:paddingBottom="5dp" android:textColor="#ff000000" />
	<ListView android:id="@+id/soundListView" android:layout_width="match_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:cacheColorHint="#00000000">
	</ListView>

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_gravity="right" android:gravity="right" android:paddingTop="5dp" android:paddingBottom="5dp">
		<Button android:id="@+id/addButton" android:layout_width="100dp" android:layout_height="50dp" android:text="OK"
			android:background="@drawable/theme_button" />
		<Button android:id="@+id/cancelButton" android:layout_width="100dp" android:layout_height="50dp" android:text="Cancel"
			android:layout_gravity="right" android:background="@drawable/theme_button" />

	</LinearLayout>

</LinearLayout>