<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="MyWorldTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
		<item name="android:buttonStyle">@style/MyButton</item>
	</style>

	<style name="Theme.Dialog" parent="MyWorldTheme">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<style name="MyButton" parent="android:style/Widget.Button">
		<item name="android:textColor">#000000</item>
		<item name="android:shadowColor">#888888</item>
		<item name="android:shadowDx">-2</item>
		<item name="android:shadowDy">-2</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:background">@drawable/theme_button</item>
	</style>

</resources>
